<h1>{{categoria.nome}}</h1>
<hr>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{id}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small><strong>Data: </strong>{{data}}</small><br>
        </div>
    </div>
{{else}}
    <h5 class="mt-4">Nenhuma Postagem</h5>
{{/each}}